@{
    //Dynamically built title for grade calc page
    ViewData["Title"] = "IS413 Grade Calculator";

    //This connects the Model Page allowing to use ASP.Net
}
@model GradeCalcModel

<!--Container for the form-->
<div class="grade">
    <h2>Grade Calculator</h2>

    <p>input the percent you have in each category(ie:95.1)</p>
    <!--form with dynamic name and min max tags associated-->
    <form method="post">
        <label>Assignments</label>
        <input id="assign" asp-for="Assignments"/><br />

        <label>Group Project</label>
        <input id="group" asp-for="group"/><br />

        <label>Quizzes</label>
        <input id="quiz" asp-for="quiz"/><br />

        <label>Midterm</label>
        <input id="mid" asp-for="mid"/><br />

        <label>Final</label>
        <input id="final" asp-for="final"/><br />

        <label>Intex</label>
        <input id="intex" asp-for="intex"/><br />

        <input id="Submit" type="submit" value="Calculate Grade" />

        <h1 id="calculatedGrade"></h1>
        <!--Validator to be filled and have min and max-->
        <div asp-validation-summary="All"></div>
    </form>
</div>

<script src="~/js/calc.js"></script>
